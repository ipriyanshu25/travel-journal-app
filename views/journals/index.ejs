
<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center">
    <h1>Travel Journals</h1>
    <% if(isAuthenticated) { %>
      <a href="/journal/new" class="btn btn-success">Add New Journal</a>
    <% } %>
  </div>
  
  <div class="row mt-4">
    <% if(journals && journals.length > 0) { %>
      <% journals.forEach(journal => { %>
        <div class="col-md-4 mb-4">
          <div class="card h-100">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
              <h5 class="mb-0"><%= journal.destination %></h5>
              <span class="badge bg-light text-dark"><%= journal.rating %>/5</span>
            </div>
            <div class="card-body">
              <p class="card-text">
                <strong>From:</strong> <%= new Date(journal.arrivalDate).toLocaleDateString() %><br>
                <strong>To:</strong> <%= new Date(journal.departureDate).toLocaleDateString() %>
              </p>
              <p class="card-text text-truncate">
                <%= journal.experience %>
              </p>
              <p class="card-text">
                <small class="text-muted">By: <%= journal.author.username %></small>
              </p>
            </div>
            <div class="card-footer">
              <a href="/journals/<%= journal._id %>" class="btn btn-info btn-sm">View Details</a>
            </div>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <div class="col-12">
        <div class="alert alert-info">
          No journals found. 
          <% if(isAuthenticated) { %>
            <a href="/journal/new">Create your first travel journal!</a>
          <% } else { %>
            <a href="/login">Login</a> to create a travel journal!
          <% } %>
        </div>
      </div>
    <% } %>
  </div>
</div>
