<%- include('../partials/header') %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header bg-primary text-white">
          <h3 class="mb-0">Register</h3>
        </div>
        <div class="card-body">
          <% if(typeof errors !== 'undefined' && errors.length > 0) { %>
            <div class="alert alert-danger">
              <ul class="mb-0">
                <% errors.forEach(error => { %>
                  <li><%= error %></li>
                <% }) %>
              </ul>
            </div>
          <% } %>
          
          <form action="/register" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
              <label for="username" class="form-label">Username</label>
              <input 
                type="text" 
                class="form-control" 
                id="username" 
                name="username" 
                value="<%= typeof formData !== 'undefined' ? formData.username : '' %>"
                required
              >
              <div class="invalid-feedback">
                Please provide a username.
              </div>
            </div>
            
            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input 
                type="password" 
                class="form-control" 
                id="password" 
                name="password" 
                required
              >
              <div class="invalid-feedback">
                Password must be at least 6 characters.
              </div>
            </div>
            
            <div class="mb-3">
              <label for="nationality" class="form-label">Nationality</label>
              <input 
                type="text" 
                class="form-control" 
                id="nationality" 
                name="nationality" 
                value="<%= typeof formData !== 'undefined' ? formData.nationality : '' %>"
                required
              >
              <div class="invalid-feedback">
                Please provide your nationality.
              </div>
            </div>
            
            <div class="mb-3">
              <label for="travelStyle" class="form-label">Travel Style</label>
              <select class="form-select" id="travelStyle" name="travelStyle" required>
                <option value="" selected disabled>Choose your travel style</option>
                <option value="Budget" <%= typeof formData !== 'undefined' && formData.travelStyle === 'Budget' ? 'selected' : '' %>>Budget</option>
                <option value="Luxury" <%= typeof formData !== 'undefined' && formData.travelStyle === 'Luxury' ? 'selected' : '' %>>Luxury</option>
                <option value="Adventure" <%= typeof formData !== 'undefined' && formData.travelStyle === 'Adventure' ? 'selected' : '' %>>Adventure</option>
                <option value="Cultural" <%= typeof formData !== 'undefined' && formData.travelStyle === 'Cultural' ? 'selected' : '' %>>Cultural</option>
                <option value="Relaxation" <%= typeof formData !== 'undefined' && formData.travelStyle === 'Relaxation' ? 'selected' : '' %>>Relaxation</option>
              </select>
              <div class="invalid-feedback">
                Please select a travel style.
              </div>
            </div>
            
            <div class="mb-3">
              <label for="favoriteContinent" class="form-label">Favorite Continent</label>
              <select class="form-select" id="favoriteContinent" name="favoriteContinent" required>
                <option value="" selected disabled>Choose your favorite continent</option>
                <option value="Africa" <%= typeof formData !== 'undefined' && formData.favoriteContinent === 'Africa' ? 'selected' : '' %>>Africa</option>
                <option value="Antarctica" <%= typeof formData !== 'undefined' && formData.favoriteContinent === 'Antarctica' ? 'selected' : '' %>>Antarctica</option>
                <option value="Asia" <%= typeof formData !== 'undefined' && formData.favoriteContinent === 'Asia' ? 'selected' : '' %>>Asia</option>
                <option value="Europe" <%= typeof formData !== 'undefined' && formData.favoriteContinent === 'Europe' ? 'selected' : '' %>>Europe</option>
                <option value="North America" <%= typeof formData !== 'undefined' && formData.favoriteContinent === 'North America' ? 'selected' : '' %>>North America</option>
                <option value="Oceania" <%= typeof formData !== 'undefined' && formData.favoriteContinent === 'Oceania' ? 'selected' : '' %>>Oceania</option>
                <option value="South America" <%= typeof formData !== 'undefined' && formData.favoriteContinent === 'South America' ? 'selected' : '' %>>South America</option>
              </select>
              <div class="invalid-feedback">
                Please select a favorite continent.
              </div>
            </div>
            
            <button type="submit" class="btn btn-primary w-100">Register</button>
          </form>
          
          <div class="mt-3 text-center">
            <p>Already have an account? <a href="/login">Login</a></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>